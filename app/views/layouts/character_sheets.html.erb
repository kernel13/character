<% content_for :content do %>
	<div id="page_container">
	  <header id="header">
		<div id="banner">
			
		</div>
		<% if user_signed_in? %>		
			<nav id="character_sheet_top_menu" style="position : fixed; width: 100%">
				<ul id="character_sheet_menu">
					<li><%= link_to "Save", '#', :id => "link_submit_form" %></li>
					<li><%= link_to "PDF", character_sheet_path(@character_sheet, format: "pdf"), :target => "_blank" unless !@character_sheet || (@character_sheet && @character_sheet.new_record?) %></li>
					<li><%= link_to "Create", new_character_sheet_path %></li>
				
					<li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
					<li style = "float: right">| <b>Welcome:</b> <%= current_user.email %></li>
				</ul>
			</nav>			
		<% end %>
		
	    <%= yield :header %>
	  </header>
	  <section id="page">
	    <%= yield :body %>
	  </section>
	  <footer>
		<%= yield :side_body %>
	  </footer>
	</div>
<% end %>
<%= render :template => 'layouts/application'%>